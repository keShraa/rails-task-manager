<div class="form-container jumbotron">
  <%= form_for(@task) do |f| %>
    <div class="form-group">
      <strong><%= f.label :title %></strong>
      <%= f.text_field :title, class: 'form-control' %>
    </div>

    <div class="form-group">
      <strong><%= f.label :details %></strong>
      <%= f.text_field :details, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.check_box :completed, class: 'form-control-left' %>
      <strong><%= f.label :completed %></strong>
    </div>

    <%= f.submit class: 'btn btn-primary' %>
  <% end %>
</div>
